{
  "name": "@ogna/js",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.2",
  "description": "A lightweight Ogna wrapper with API helper",
  "main": "dist/index.cjs.ts",
  "module": "dist/index.esm.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --target=node14 --outfile=dist/index.cjs.ts --format=cjs",
    "build:esm": "esbuild src/index.ts --bundle --platform=neutral --target=es2020 --outfile=dist/index.esm.ts --format=esm",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint 'src/*'",
    "format": "prettier --write \"src/**/*.{js,ts,json}\""
  },
  "keywords": [
    "javascript",
    "library"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ognastack/ogna-js.git"
  },
  "bugs": {
    "url": "https://github.com/ognastack/ogna-js/issues"
  },
  "homepage": "https://github.com/ognastack/ogna-js",
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
